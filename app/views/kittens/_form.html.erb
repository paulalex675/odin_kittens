    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :cuteness %>
    <%= form.select(:cuteness, options_for_select(1..10, selected: params[:cuteness]), { prompt: 'Cuteness' }) %>
  </div>

  <div class="field">
    <%= form.label :softness %>
    <%= form.select(:softness, options_for_select(1..10, selected: params[:softness]), { prompt: 'Softness' }) %>
